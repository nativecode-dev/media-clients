{
  "name": "media-clients",
  "version": "0.0.0",
  "description": "Clients for Media Services",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@git.nativecode.net:nativecode/media-clients.git"
  },
  "author": "opensource@nativecode.com",
  "keywords": [
    "radarr",
    "sonarr"
  ],
  "scripts": {
    "build": "cli-tasks build",
    "canary": "cli-tasks ci:publish:canary",
    "clean": "cli-tasks clean",
    "commit": "git add -A . && npx git-cz",
    "lerna": "lerna",
    "pre-release": "cli-tasks ci:publish:prerelease",
    "radarr": "ts-node cli/radarr/src/index.ts",
    "release": "cli-tasks ci:publish:release",
    "sonarr": "ts-node cli/sonarr/src/index.ts",
    "tasks": "cli-tasks",
    "test": "cli-tasks test",
    "upgrade": "cli-tasks upgrade",
    "watch": "cli-tasks watch"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "node_modules",
      "packages/*/src/**/*.spec.ts",
      "packages/**/index.ts"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "packages/*/src/**/*.ts"
    ],
    "instrument": true,
    "report-dir": ".cache/coverage",
    "reporter": "text",
    "sourceMap": true,
    "temp-directory": ".cache/nyc"
  },
  "dependencies": {
    "chunk-text": "^1.0.5"
  },
  "devDependencies": {
    "@nofrills/lincoln": "^6.0.0",
    "@nofrills/tasks": "^9.0.2",
    "@types/chai": "^4.2.4",
    "@types/chai-as-promised": "^7.1.2",
    "@types/chunk-text": "^1.0.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.7",
    "cross-env": "^6.0.3",
    "git-ssh-key": "^1.1.0",
    "json-sort-cli": "^1.14.5",
    "lerna": "^3.18.3",
    "mocha": "^6.2.2",
    "nexe": "^3.3.2",
    "npm-check": "^5.9.0",
    "nyc": "^14.1.1",
    "prettier": "^1.17.1",
    "rimraf": "^3.0.0",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.6.4"
  }
}
