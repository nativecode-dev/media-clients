{
  "extends": [
    "tslint-config-standard",
    "tslint-no-unused-expression-chai"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules",
      "packages/*/specs"
    ]
  },
  "rules": {
    "await-promise": true,
    "no-floating-promises": true,
    "no-unnecessary-qualifier": true,
    "return-undefined": false,
    "strict-type-predicates": true,
    "space-before-function-paren": false,
    "trailing-comma": true
  }
}